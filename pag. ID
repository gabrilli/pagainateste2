<script>

function VerificaSenha() {
    event.preventDefault();
    var form = document._Senha;
    var form2 = document._Senha2;

    if (form._Senha.value != form._Senha2.value) {
        alert ("Senhas não coincidem");
        form._Senha.focus();
        return;
    }
}

</script>





